<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="PrimaryTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="hintAnimationEnabled">false</item>
        <item name="android:textColorHint">@color/app_grey</item>
        <item name="boxBackgroundColor">@color/app_background_light</item>
    </style>

    <style name="PrimaryMaterialButton">
        <item name="android:paddingVertical" tools:targetApi="o">18dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/app_background</item>
        <item name="android:textSize">18sp</item>
        <item name="cornerRadius">12dp</item>
        <item name="backgroundTint">@color/app_yellow</item>
        <item name="rippleColor">@color/app_background_light</item>
    </style>

    <style name="SecondaryMaterialButton">
        <item name="android:paddingVertical" tools:targetApi="o">18dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="cornerRadius">12dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/app_grey</item>
        <item name="backgroundTint">@color/app_background</item>
        <item name="rippleColor">@color/app_background_light</item>
    </style>

    <style name="RoundedMaterialButton">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="rippleColor">@color/app_grey_light</item>
        <item name="backgroundTint">@color/app_background_light</item>
        <item name="cornerRadius">500dp</item>
    </style>

    <style name="RoundedImageView">
        <item name="android:background">@drawable/shape_circular</item>
        <item name="android:clipToOutline" tools:targetApi="s">true</item>
    </style>

    <style name="btnPlay">
        <item name="fabCustomSize">60dp</item>
        <item name="tint">@color/app_grey_light</item>
        <item name="backgroundTint">@color/app_background_light</item>
        <item name="rippleColor">@color/app_grey_light</item>
    </style>

</resources>